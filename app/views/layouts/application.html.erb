<!DOCTYPE html>
<html>
  <head>
    <title>TravelReviewSite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <link rel="stylesheet" type="text/css" media="screen and (max-width: 400px)" href="../src/Mobile.scss"> -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/global.css">

    <style media="screen">
      .signed-in {
        float: right;
        margin: 0 20px;
      }
      .col-md-4 {

      }
      .posts {
        display: inline-block;
        vertical-align: top;
        margin: 0 5px;
      }
      .images {
        width: 300px;
        height: 200px;
        border-radius: 5px;
      }
      .post-img {
        border-radius: 5px;
      }

      .col-sm-10.col-md-4 {
        width: 300px;
      }
      .jumbotron {
        height: 300px;
        background-color: #66C0B9;
        color: white;
      }
      .carousel-inner img {
        height: 430px;
        width: auto;
      }

      #create {
        float: right;
      }
      .container-fluid {
        background-color: #66C0B1;
      }

      .user-images {
        width: 300px;
        height: 250px;
        margin-top: 10px;
        border-radius: 5px;
      }

      .thumbnail {
        width: 360px;
        height: 400px;
      }
      .thumbnail .caption {
          padding: 0px;
          width: 260px;
          margin-left: 10px;
          margin-top: -12px;
      }

      body {
        background:#EEEEDD;
      }
      .foot {
        background: #2D2D47;
        height: 300px;
        margin-top: 30px;
      }
      @media screen and (max-width: 400px) {
        .post-img {
          width: 300px;
          height: 200px;
          border-radius: 5px;
        }
        .foot {
          height: 2em;
        }
        .comments {
          background: white;
          height: 40px;
          list-style-type: none;
          border: 1px solid grey;
          border-radius: 5px;
          margin: 5px;
          padding-left: 3px;
        }
        .post-text {
          font-weight: bold;
        }
        h1, .subheader {
          text-align: center;
        }
        .jumbotron p {
          text-align: center;
        }
        .jumbotron a {
          margin-left: 30%;
        }
        .posts .images {
          box-shadow: 10px 10px 5px #888888
        }
        .navbar-form button {
          margin-left: 40%;
        }
      }


    </style>
  </head>

  <body>
    <%= render 'partials/navbar' %>

    <% if logged_in? %>
      <div class="signed-in">
        <p>Signed in as: <i> <%= current_user.username %> </i></p>
      </div>
    <% end  %>

    <!-- <%= link_to "Home", root_path %> -->


    <!-- <div class="sign-in">
      <% if logged_in? %>
        <%= link_to "Logout", logout_path, {method: "DELETE"} %>
      <% else %>
        <%= link_to "Login", new_session_path %>
        <%= link_to "Create Account", new_user_path %>
        <% end %>
    </div> -->

    <div class="container">
           <div class="row">
            <div class="col-md-8">
              <% if flash[:alert] %>
                <div class="alert alert-danger">
                  <%= flash[:alert] %>
                </div>
              <% end %>

            </div>
          </div>

          <%= yield %>
        </div>





    <!-- <form method="get" action="/posts/search">
      <input type="text" placeholder="Search Cities" name="query">
    </form> -->


  </body>
  <footer class="foot">



  </footer>
</html>
