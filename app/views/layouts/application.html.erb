      <% else %>
        <%= link_to "Login", new_session_path %>
        <%= link_to "Create Account", new_user_path %>
        <% end %>
    </div> -->

    <div class="container">
           <div class="row">
            <div class="col-md-8">
              <% if flash[:alert] %>
                <div class="alert alert-danger">
                  <%= flash[:alert] %>
                </div>
              <% end %>

            </div>
          </div>

          <%= yield %>
        </div>





    <!-- <form method="get" action="/posts/search">
      <input type="text" placeholder="Search Cities" name="query">
    </form> -->


  </body>
</html>
