<!DOCTYPE html>
<html>
  <head>
    <title>TravelReviewSite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style media="screen">
      .signed-in {
        float: right;
        margin: 0 20px;
      }
      .col-md-4 {

      }
      .posts {
        display: inline-block;
        vertical-align: top;
        margin: 0 5px;
      }
      .images {
        width: 300px;
        height: 200px;
        border-radius: 5px;
      }
      .post-img {
        border-radius: 5px;
      }

      .col-sm-10.col-md-4 {
        width: 300px;
      }
    </style>
  </head>

  <body>
    <%= render 'partials/navbar' %>

    <% if logged_in? %>
      <div class="signed-in">
        <p>Signed in as: <i> <%= current_user.username %> </i></p>
      </div>
    <% end  %>

    <!-- <%= link_to "Home", root_path %> -->


