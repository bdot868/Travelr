<h1><%= @user.username %></h1>

<h3>Trips:</h3>


 <div class="container">


  <% @user.posts.each_slice(3) do |row|  %>
  <div class="row">
    <% row.each do |post| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag post.image.url(:thumb), class:"user-images" %>
          <div class="caption">
            <h3 class="text-capitalize"><%= link_to post.city, post_path(post.id) %></h3>
            <p> <%= post.body.first(50) %>... </p>
            <div><%= link_to 'More', post_path(post), class:"btn btn-primary" %></div>
            <!-- <p><a href="posts/show" class="btn btn-primary" role="button">Button</a> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end  %>
<br>
<hr>
<br>

</div>
<h4>All posts by <%= @user.username %></h4>
  <% @user.posts.each do |up|  %>
    <article>
      <%= link_to up.title, post_path(up) %>
    </article>
  <% end  %>

<br>

<% if logged_in? %>
  <div type="button" class="btn btn-warning">
    <%= link_to "Create New Post", new_post_path %>
  </div>
<% end  %>

<article class="">
  <h4>Name: <%= @user.name %></h4>
  <h4>City: <%= @user.city %></h4>
</article>



<%= link_to "Back", root_path %>
