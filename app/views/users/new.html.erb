<h1>Create new Account</h1>


  <%= form_for @user,{:html => {:class => 'form-horizontal'}} do |f| %>
    <fieldset>
      <div class="form-group">
          <%= label_tag :name, 'Name', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
          <%= label_tag :city, 'City', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :city, placeholder: 'City', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
          <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
          <%= label_tag :username, 'Username', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
          <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
          <%= f.text_field :password, placeholder: 'Password', class: 'form-control' %>
        </div>
      </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
        </div>
    </div>
  </fieldset>
  <% end  %>
